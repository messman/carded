{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": [
			"ES2021"
		],
		"target": "ESNext",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"allowJs": false,
		"checkJs": false,
		"alwaysStrict": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		"preserveConstEnums": true,
		"outDir": "./src",
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}